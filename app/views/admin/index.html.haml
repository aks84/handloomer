
- if current_user.admin?
    %h1 Admin#index
    %h3 Create New Product/Category
- if current_user.seller?
    %h1 Seller#index
    %h3 Create New Product


%ul
    - if current_user.admin?
        %li
            = link_to('New Category', new_admin_category_path, target: :_blank)
    %li
        = link_to('New Product', new_admin_product_path, target: :_blank)


.products
    %h3 Manage Products
    %ol
        - @products.each do |product|
            %li=product.name
            = link_to 'Show', admin_product_path(product), target: :_blank
            = link_to 'Edit', edit_admin_product_path(product), target: :_blank
            = link_to 'Destroy', admin_product_path(product), method: :delete, data: { confirm: 'Are you sure?' }, target: :_blank
            %br
            %br


- if current_user.admin?
    .categories

        %h3 Manage Categories
        %ol
            - @categories.each do | category |
                %li=category.name
                = link_to 'Show', admin_category_path(category), target: :_blank
                = link_to 'Edit', edit_admin_category_path(category), target: :_blank
                = link_to 'Destroy', admin_category_path(category), method: :delete, data: { confirm: 'Are you sure?' }, target: :_blank
                %br
                %br



