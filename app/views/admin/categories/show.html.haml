%p#notice= notice

%p
  %b Name:
  = @category.name
%p
  %b Desc:
  = @category.desc

= link_to 'Edit', edit_admin_category_path(@category)
\|
= link_to 'Back', admin_categories_path


%h3 Products under #{@category.name}
- @category.products.each do |product|
  %li= link_to product.name, admin_product_path(product), target: :_blank