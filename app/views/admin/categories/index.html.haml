%h1 Listing categories

%table
  %thead
    %tr
      %th Name
      %th Desc
      %th
      %th
      %th

  %tbody
    - @categories.each do |category|
      %tr
        %td= category.name
        %td= category.desc
        %td= link_to 'Show', admin_category_path(category), target: :_blank
        %td= link_to 'Edit', edit_admin_category_path(category), target: :_blank
        %td= link_to 'Destroy', admin_category_path(category), method: :delete, data: { confirm: 'Are you sure?' }, target: :_blank

%br

= link_to 'New Category', new_admin_category_path, target: :_blank
