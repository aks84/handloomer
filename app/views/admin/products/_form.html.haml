= form_for [:admin, @product], html: {multipart: true} do |f|
  - if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :images
    = f.file_field :images, multiple: true
  .field
    = f.label :price
    = f.text_field :price
  .field
    = f.label :origin
    = f.text_field :origin
  .field
    = f.label :available
    = f.check_box :available
  .field
    = f.label :season
    = f.text_field :season
  .field
    = f.label :thread_type
    = f.text_field :thread_type
  .field
    = f.label :desc
    = f.text_area :desc
  .field
    = f.label :category
    = f.select :category_id, (Category.all.collect{|c| [c.name, c.id]})
  .actions
    = f.submit 'Save'
